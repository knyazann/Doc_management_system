<%= form_with model: @document do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :name %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :name, placeholder: 'Name', class: 'form-control form-control-lg' %>
    </div>
  </div>

    <div class="col-sm-10">
      <%= f.file_field :file %>
    </div>
  </div>


  <%= f.submit (@document.new_record? ? "Загрузить в БД!" : "Save"),
    class: 'btn btn-primary btn-lg' %>
<% end %>
