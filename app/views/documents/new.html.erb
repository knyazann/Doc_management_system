 <div class="row">
    <div class="col-auto">
      <%= link_to '« назад', documents_path, class: 'previous', style: 'margin-top:auto' %>
    </div>

<div class="col-lg-10">
<div class="decor">
  <div class="form-left-decoration"></div>
    <div class="form-right-decoration"></div>
      <div class="circle"></div>
        <div class="form-inner">

        <h3>Новый документ</h3>
        <%= form_with model: @document do |f| %>

        <%= f.label :number, "Регистрационный номер" %>
        <%= f.text_field :number, placeholder: 'Регистрационный номер', class: 'form-control form-control-lg' %>
  
        <%= f.label :name, "Название документа" %>
        <%= f.text_field :name, placeholder: 'Название документа', class: 'form-control form-control-lg', style: 'focus:on' %>

        <%= f.label :type, "Тип документа" %>
        <%= f.select :type, ['Договор', 'Записка', 'Заявление'], placeholder: 'Выберите тип документа'%>

        <%= f.label :name, "Контрагент" %>
        <%= f.text_field :name, placeholder: 'Контрагент', class: 'form-control form-control-lg' %>
    
        <%= f.label "Прикрепить файл" %>
        <%= f.file_field :file %>
  
        <%= f.submit  "Создать", class: 'btn btn-primary btn-lg' %>
        <% end %>
        </div>
</div>


</div>
