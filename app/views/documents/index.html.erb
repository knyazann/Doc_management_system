<div class="row">
<div class="col-sm-3">
<%= link_to 'Создать документ', new_document_path, class: 'shine-button' %>
<%= render 'menu'%>
</div>
 <div class="col-sm-6">
  <table class="doc-table">
   <caption>
    Мои документы
   </caption>
  <tr> <!--ряд с ячейками заголовков-->
    <th colspan="2">название</th>
    <th colspan="2">тип документа</th>
    <th></th>
  </tr> 
  <% @documents.each do |doc| %>
    <tr> <!--ряд с ячейками тела таблицы-->
     <td><%= doc.name%></td>
     <td></td>
     <td><%= doc.doc_type%></td>
     <td></td>
     <td><%=link_to "Посмотреть", documents_path,  style: 'color:#5C2018;' %></td>
    </tr>    
  <%end %>
 </table>
</div>
</div>
 




  